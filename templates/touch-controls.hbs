{{!-- SharedControl Confirmation UI Template --}}
<div class="shared-control-confirmation-overlay">
  <div class="shared-control-confirm-header">
    <h3>{{localize "shared-control.ui.confirmTitle"}}</h3>
  </div>

  <div class="shared-control-confirm-body">
    <div class="shared-control-distance-info">
      <label>{{localize "shared-control.ui.distance"}}:</label>
      <span class="distance-value">{{distance}} {{units}}</span>
    </div>

    {{#if cost}}
    <div class="shared-control-cost-info">
      <label>{{localize "shared-control.ui.cost"}}:</label>
      <span class="cost-value">{{cost}}</span>
    </div>
    {{/if}}

    {{#if insufficient}}
    <div class="shared-control-warning">
      <i class="fas fa-exclamation-triangle"></i>
      <span>{{localize "shared-control.notifications.insufficientMovement"}}</span>
    </div>
    {{/if}}
  </div>

  <div class="shared-control-confirm-footer">
    <div class="confirm-instruction">
      <i class="fas fa-hand-pointer"></i>
      <span>{{localize "shared-control.ui.tapToConfirm"}}</span>
    </div>

    <div class="cancel-instruction">
      <i class="fas fa-times-circle"></i>
      <span>{{localize "shared-control.ui.tapTokenToCancel"}}</span>
    </div>
  </div>
</div>
